<Window x:Class="Heat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Heat"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="17*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="251*"/>
            <ColumnDefinition Width="268*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="go_button" Content="Go!" HorizontalAlignment="Left" Height="37" Margin="134.6,14.4,0,0" VerticalAlignment="Top" Width="93" Click="button_Click" Grid.Column="1" Grid.Row="1"/>
        <TextBlock x:Name="action" HorizontalAlignment="Left" Margin="33,51.4,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="120" Width="302" FontSize="48" Grid.Row="1" TextAlignment="Center" FontWeight="Bold"/>
        <Button Grid.Column="1" Margin="134.6,61.4,43.4,193.4" Grid.Row="1">Pause</Button>
        <Button Grid.Column="1" Margin="134.6,106.4,43.4,148.4" Grid.Row="1">Restart</Button>
        <TextBlock x:Name="clock" HorizontalAlignment="Left" Margin="115,178.4,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="32" Width="145" Grid.ColumnSpan="2" TextAlignment="Center"/>
    </Grid>
</Window>
