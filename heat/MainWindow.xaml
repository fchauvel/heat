        xmlns:local="clr-namespace:Heat"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="17*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="251*"/>
            <ColumnDefinition Width="268*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="go_button" Content="Go!" HorizontalAlignment="Left" Height="37" Margin="164.6,10,0,0" VerticalAlignment="Top" Width="93" Click="button_Click" Grid.Column="1" Grid.RowSpan="2"/>
        <TextBlock x:Name="text" HorizontalAlignment="Left" Margin="36,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="241" Grid.RowSpan="2" Width="302"/>

    </Grid>
